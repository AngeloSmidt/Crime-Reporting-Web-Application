{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: \"PersonalDetails\",\n  data() {\n    return {\n      form: {\n        name: \"\",\n        email: \"\",\n        number: \"\",\n        password: \"\",\n        confirmPassword: \"\",\n        idNumber: \"\"\n      },\n      selectedFile: null\n    };\n  },\n  mounted() {\n    this.form.idNumber = localStorage.getItem('idNumber') || '';\n    if (this.form.idNumber) {\n      this.fetchUserDetails(this.form.idNumber);\n    }\n  },\n  methods: {\n    async fetchUserDetails(idNumber) {\n      try {\n        const response = await this.$axios.get(`http://localhost:3000/user/${idNumber}`);\n        const user = response.data;\n        this.form.name = user.FullName || '';\n        this.form.email = user.Email || '';\n        this.form.number = user.PhoneNumber || '';\n        this.form.password = user.Password || '';\n        this.form.confirmPassword = user.Password || '';\n      } catch (error) {\n        console.error('Failed to fetch user details:', error);\n      }\n    },\n    async handleSubmit() {\n      console.log(\"submitting form with data:\", this.form);\n      try {\n        const res = await this.$axios.post('http://localhost:3000/update-personal-details', this.form);\n        console.log(\"Personal details updated successfully:\", res.data);\n        alert(res.data.message);\n      } catch (error) {\n        if (error.response && error.response.data.error) {\n          alert(\"Error: \" + error.response.data.error);\n        } else {\n          alert(\"Something went wrong. Please try again.\");\n        }\n        console.error(\"Error updating personal details:\", error);\n      }\n    },\n    handleFileChange(event) {\n      const file = event.target.files[0];\n      if (file) {\n        this.selectedFile = file;\n        this.previewUrl = URL.createObjectURL(file);\n      }\n    },\n    handleUpload() {\n      alert(\"Profile picture updated!\");\n      this.selectedFile = null;\n      this.previewUrl = null;\n    }\n  },\n  methods: {\n    async fetchUserDetails() {\n      try {\n        const res = await axios.get(`http://localhost:3000/user/${this.form.idNumber}`);\n\n        // ✅ Fill the form with DB data\n        this.form.name = res.data.FullName;\n        this.form.email = res.data.Email;\n        this.form.number = res.data.PhoneNumber;\n        this.form.password = res.data.Password;\n        this.form.confirmPassword = res.data.Password; // keep it in sync\n      } catch (error) {\n        console.error(\"Error fetching user details:\", error);\n        alert(\"Failed to load personal details.\");\n      }\n    },\n    async handleSubmit() {\n      console.log(\"submitting form with data:\", this.form);\n      try {\n        const res = await axios.post('http://localhost:3000/update-personal-details', this.form);\n        console.log(\"Personal details updated successfully:\", res.data);\n        alert(res.data.message);\n      } catch (error) {\n        if (error.response && error.response.data.error) {\n          alert(\"Error: \" + error.response.data.error);\n        } else {\n          alert(\"Something went wrong. Please try again.\");\n        }\n        console.error(\"Error updating personal details:\", error);\n      }\n    },\n    handleFileChange(event) {\n      const file = event.target.files[0];\n      if (file) {\n        this.selectedFile = file;\n        this.previewUrl = URL.createObjectURL(file);\n      }\n    },\n    handleUpload() {\n      alert(\"Profile picture updated!\");\n      this.selectedFile = null;\n      this.previewUrl = null;\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","form","email","number","password","confirmPassword","idNumber","selectedFile","mounted","localStorage","getItem","fetchUserDetails","methods","response","$axios","get","user","FullName","Email","PhoneNumber","Password","error","console","handleSubmit","log","res","post","alert","message","handleFileChange",