{"ast":null,"code":"import NewsPost from \"../components/NewsPost.vue\";\nexport default {\n  name: \"AdminDashboardPage\",\n  components: {\n    NewsPost\n  },\n  data() {\n    return {\n      showModal: false,\n      newPost: {\n        title: '',\n        content: ''\n      },\n      posts: [{\n        id: 1,\n        title: \"Welcome to the Dashboard\",\n        content: \"This is your admin panel.\"\n      }]\n    };\n  },\n  methods: {\n    submitPost() {\n      if (!this.newPost.title.trim() || !this.newPost.content.trim()) {\n        alert(\"Both title and content are required.\");\n        return;\n      }\n      this.posts.unshift({\n        id: this.posts.length + 1,\n        title: this.newPost.title,\n        content: this.newPost.content\n      });\n      this.newPost.title = '';\n      this.newPost.content = '';\n      this.showModal = false;\n    }\n  }\n};","map":{"version":3,"names":["NewsPost","name","components","data","showModal","newPost","title","content","posts","id","methods","submitPost","trim","alert","unshift","length"],"sources":["C:\\Users\\sifis\\OneDrive\\Documents\\Crime-Reporting-Web-Application\\Frontend\\src\\pages\\AdminDashboard.vue"],"sourcesContent":["<template>\r\n  <div class=\"Dashboard\">\r\n    <!-- Header and button row -->\r\n    <div class=\"dashboard-header\">\r\n      <h3 class=\"Header\">Admin Dashboard</h3>\r\n      <button class=\"create-btn\" @click=\"showModal = true\">Create Post</button>\r\n    </div>\r\n\r\n    <!-- News list -->\r\n    <NewsPost :posts=\"posts\" />\r\n\r\n    <!-- Modal -->\r\n    <div v-if=\"showModal\" class=\"modal-overlay\">\r\n      <div class=\"modal-content\">\r\n        <h4>Create a News Post</h4>\r\n        <input v-model=\"newPost.title\" type=\"text\" placeholder=\"Title\" />\r\n        <textarea v-model=\"newPost.content\" placeholder=\"Write your content...\"></textarea>\r\n        <div class=\"modal-actions\">\r\n          <button class=\"post-btn\" @click=\"submitPost\">Post</button>\r\n          <button class=\"cancel-btn\" @click=\"showModal = false\">Cancel</button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport NewsPost from \"../components/NewsPost.vue\";\r\n\r\nexport default {\r\n  name: \"AdminDashboardPage\",\r\n  components: {\r\n    NewsPost,\r\n  },\r\n  data() {\r\n    return {\r\n      showModal: false,\r\n      newPost: {\r\n        title: '',\r\n        content: ''\r\n      },\r\n      posts: [\r\n        { id: 1, title: \"Welcome to the Dashboard\", content: \"This is your admin panel.\" }\r\n      ]\r\n    };\r\n  },\r\n  methods: {\r\n    submitPost() {\r\n      if (!this.newPost.title.trim() || !this.newPost.content.trim()) {\r\n        alert(\"Both title and content are required.\");\r\n        return;\r\n      }\r\n\r\n      this.posts.unshift({\r\n        id: this.posts.length + 1,\r\n        title: this.newPost.title,\r\n        content: this.newPost.content\r\n      });\r\n\r\n      this.newPost.title = '';\r\n      this.newPost.content = '';\r\n      this.showModal = false;\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.Dashboard {\r\n  background-color: #e6eff5;\r\n  font-family: Arial, sans-serif;\r\n  padding: 20px;\r\n  min-height: 100vh;\r\n}\r\n\r\n.dashboard-header {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.Header {\r\n  color: #333;\r\n  margin: 0;\r\n}\r\n\r\n.create-btn {\r\n  padding: 10px 16px;\r\n  background-color: #2563eb;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 8px;\r\n  font-weight: bold;\r\n  cursor: pointer;\r\n}\r\n.create-btn:hover {\r\n  background-color: #1d4ed8;\r\n}\r\n\r\n/* Modal */\r\n.modal-overlay {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background-color: rgba(0, 0, 0, 0.4);\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  z-index: 1000;\r\n}\r\n\r\n.modal-content {\r\n  background: white;\r\n  padding: 30px;\r\n  border-radius: 12px;\r\n  width: 90%;\r\n  max-width: 500px;\r\n  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);\r\n}\r\n\r\n.modal-content h4 {\r\n  margin-bottom: 15px;\r\n}\r\n\r\n.modal-content input,\r\n.modal-content textarea {\r\n  width: 100%;\r\n  padding: 12px;\r\n  margin-bottom: 10px;\r\n  border-radius: 6px;\r\n  border: 1px solid #cbd5e1;\r\n  font-size: 1rem;\r\n}\r\n\r\n.modal-actions {\r\n  display: flex;\r\n  justify-content: flex-end;\r\n  gap: 10px;\r\n  margin-top: 10px;\r\n}\r\n\r\n.post-btn {\r\n  background-color: #2563eb;\r\n  color: white;\r\n  padding: 10px 16px;\r\n  border: none;\r\n  border-radius: 6px;\r\n  font-weight: bold;\r\n  cursor: pointer;\r\n}\r\n.post-btn:hover {\r\n  background-color: #1e40af;\r\n}\r\n\r\n.cancel-btn {\r\n  background: #f3f4f6;\r\n  border: 1px solid #ccc;\r\n  padding: 10px 16px;\r\n  border-radius: 6px;\r\n  cursor: pointer;\r\n}\r\n</style>\r\n"],"mappings":"AA2BA,OAAOA,QAAO,MAAO,4BAA4B;AAEjD,eAAe;EACbC,IAAI,EAAE,oBAAoB;EAC1BC,UAAU,EAAE;IACVF;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,KAAK;MAChBC,OAAO,EAAE;QACPC,KAAK,EAAE,EAAE;QACTC,OAAO,EAAE;MACX,CAAC;MACDC,KAAK,EAAE,CACL;QAAEC,EAAE,EAAE,CAAC;QAAEH,KAAK,EAAE,0BAA0B;QAAEC,OAAO,EAAE;MAA4B;IAErF,CAAC;EACH,CAAC;EACDG,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAI,CAAC,IAAI,CAACN,OAAO,CAACC,KAAK,CAACM,IAAI,CAAC,KAAK,CAAC,IAAI,CAACP,OAAO,CAACE,OAAO,CAACK,IAAI,CAAC,CAAC,EAAE;QAC9DC,KAAK,CAAC,sCAAsC,CAAC;QAC7C;MACF;MAEA,IAAI,CAACL,KAAK,CAACM,OAAO,CAAC;QACjBL,EAAE,EAAE,IAAI,CAACD,KAAK,CAACO,MAAK,GAAI,CAAC;QACzBT,KAAK,EAAE,IAAI,CAACD,OAAO,CAACC,KAAK;QACzBC,OAAO,EAAE,IAAI,CAACF,OAAO,CAACE;MACxB,CAAC,CAAC;MAEF,IAAI,CAACF,OAAO,CAACC,KAAI,GAAI,EAAE;MACvB,IAAI,CAACD,OAAO,CAACE,OAAM,GAAI,EAAE;MACzB,IAAI,CAACH,SAAQ,GAAI,KAAK;IACxB;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}