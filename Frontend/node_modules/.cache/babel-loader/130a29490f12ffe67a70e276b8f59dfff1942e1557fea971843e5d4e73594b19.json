{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: \"PersonalDetails\",\n  data() {\n    return {\n      form: {\n        name: \"\",\n        email: \"\",\n        number: \"0712345678\",\n        password: \"password123\",\n        confirmPassword: \"password123\",\n        idNumber: \"\"\n      },\n      selectedFile: null\n    };\n  },\n  mounted() {\n    this.form.idNumber = localStorage.getItem('idNumber') || '';\n  },\n  methods: {\n    async fetchUserDetails() {\n      try {\n        const res = await axios.get(`http://localhost:3000/user/${this.form.idNumber}`);\n\n        // ✅ Fill the form with DB data\n        this.form.name = res.data.FullName;\n        this.form.email = res.data.Email;\n        this.form.number = res.data.PhoneNumber;\n        this.form.password = res.data.Password;\n        this.form.confirmPassword = res.data.Password; // keep it in sync\n      } catch (error) {\n        console.error(\"Error fetching user details:\", error);\n        alert(\"Failed to load personal details.\");\n      }\n    },\n    async handleSubmit() {\n      console.log(\"submitting form with data:\", this.form);\n      try {\n        const res = await axios.post('http://localhost:3000/update-personal-details', this.form);\n        console.log(\"Personal details updated successfully:\", res.data);\n        alert(res.data.message);\n      } catch (error) {\n        if (error.response && error.response.data.error) {\n          alert(\"Error: \" + error.response.data.error);\n        } else {\n          alert(\"Something went wrong. Please try again.\");\n        }\n        console.error(\"Error updating personal details:\", error);\n      }\n    },\n    handleFileChange(event) {\n      const file = event.target.files[0];\n      if (file) {\n        this.selectedFile = file;\n        this.previewUrl = URL.createObjectURL(file);\n      }\n    },\n    handleUpload() {\n      alert(\"Profile picture updated!\");\n      this.selectedFile = null;\n      this.previewUrl = null;\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","form","email","number","password","confirmPassword","idNumber","selectedFile","mounted","localStorage","getItem","methods","fetchUserDetails","res","get","FullName","Email","PhoneNumber","Password","error","console","alert","handleSubmit","log","post","message","response","handleFileChange","event","file","target","files","previewUrl","URL","createObjectURL","handleUpload"],"sources":["C:\\Users\\sifis\\OneDrive\\Documents\\Project 3\\Crime-Reporting-Web-Application\\Frontend\\src\\pages\\PersonalDetails.vue"],"sourcesContent":["<template>\r\n  <div class=\"personal-details\">\r\n    <h2>Update Personal Details</h2>\r\n    <form @submit.prevent=\"handleSubmit\">\r\n      <label>\r\n        Full Name:\r\n        <input type=\"text\" v-model=\"form.name\" placeholder=\"Name\" />\r\n      </label>\r\n      <label>\r\n        Email Address:\r\n        <input type=\"email\" v-model=\"form.email\" placeholder=\"Email\" />\r\n      </label>\r\n      <label>\r\n        Phone Number:\r\n        <input type=\"text\" v-model=\"form.number\" placeholder=\"number\" />\r\n      </label>\r\n      <label>\r\n        password:\r\n        <input type=\"password\" v-model=\"form.password\" placeholder=\"Password\" />\r\n      </label>\r\n      <label>\r\n        Comfirm Password:\r\n        <input type=\"password\" v-model=\"form.confirmPassword\" placeholder=\"Confirm Password\" />\r\n      </label>\r\n      <label>\r\n        ID Number:\r\n        <input type=\"text\" v-model=\"form.idNumber\" placeholder=\"ID Number\" readonly />\r\n      </label>\r\n      <button type=\"submit\">Save</button>\r\n    </form>\r\n    <div class=\"profile-picture-section\">\r\n      <h2>Update Profile Picture</h2>\r\n      <div class=\"picture-preview\" v-if=\"previewUrl\">\r\n        <img :src=\"previewUrl\" alt=\"Profile Picture Preview\" />\r\n      </div>\r\n      <input type=\"file\" @change=\"handleFileChange\" />\r\n      <button @click=\"handleUpload\" :disabled=\"!selectedFile\">Upload</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\nexport default {\r\n  name: \"PersonalDetails\",\r\n  data() {\r\n    return {\r\n      form: {\r\n        name: \"\",\r\n        email: \"\",\r\n        number: \"0712345678\",\r\n        password: \"password123\",\r\n        confirmPassword: \"password123\",\r\n        idNumber: \"\",\r\n      },\r\n      selectedFile: null,\r\n    };\r\n  },\r\n  mounted() {\r\n    this.form.idNumber = localStorage.getItem('idNumber') || '';\r\n  },\r\n  methods: {\r\n     async fetchUserDetails() {\r\n      try {\r\n        const res = await axios.get(`http://localhost:3000/user/${this.form.idNumber}`);\r\n        \r\n        // ✅ Fill the form with DB data\r\n        this.form.name = res.data.FullName;\r\n        this.form.email = res.data.Email;\r\n        this.form.number = res.data.PhoneNumber;\r\n        this.form.password = res.data.Password;\r\n        this.form.confirmPassword = res.data.Password; // keep it in sync\r\n      } catch (error) {\r\n        console.error(\"Error fetching user details:\", error);\r\n        alert(\"Failed to load personal details.\");\r\n      }\r\n    },\r\n    async handleSubmit() {\r\n      console.log(\"submitting form with data:\", this.form);\r\n      try {\r\n        const res = await axios.post('http://localhost:3000/update-personal-details', this.form);\r\n        console.log(\"Personal details updated successfully:\", res.data);\r\n        alert(res.data.message);\r\n      } catch (error) {\r\n        if (error.response && error.response.data.error) {\r\n          alert(\"Error: \" + error.response.data.error);\r\n        } else {\r\n          alert(\"Something went wrong. Please try again.\");\r\n        }\r\n        console.error(\"Error updating personal details:\", error);\r\n      }\r\n    }, \r\n    handleFileChange(event) {\r\n      const file = event.target.files[0];\r\n      if (file) {\r\n        this.selectedFile = file;\r\n        this.previewUrl = URL.createObjectURL(file);\r\n      }\r\n    },\r\n    handleUpload() {\r\n      alert(\"Profile picture updated!\");\r\n      this.selectedFile = null;\r\n      this.previewUrl = null;\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.personal-details {\r\n  max-width: 600px;\r\n  margin: 20px auto;\r\n  padding: 20px;\r\n  background: white;\r\n  border-radius: 8px;\r\n}\r\n\r\n.personal-details label {\r\n  display: block;\r\n  margin-bottom: 10px;\r\n  font-weight: 600;\r\n}\r\n\r\n.personal-details input {\r\n  width: 100%;\r\n  padding: 8px;\r\n  margin-top: 4px;\r\n  border: 1px solid #ccc;\r\n  border-radius: 4px;\r\n}\r\n\r\n.personal-details button {\r\n  background-color: #10b981;\r\n  color: white;\r\n  padding: 10px 16px;\r\n  border: none;\r\n  border-radius: 6px;\r\n  cursor: pointer;\r\n  font-weight: 600;\r\n}\r\n\r\n.profile-picture-section {\r\n  margin-top: 40px;\r\n  text-align: center;\r\n}\r\n\r\n.picture-preview img {\r\n  max-width: 200px;\r\n  max-height: 200px;\r\n  border-radius: 50%;\r\n  margin-bottom: 10px;\r\n}\r\n\r\ninput[type=\"file\"] {\r\n  margin-bottom: 10px;\r\n}\r\n\r\nbutton:disabled {\r\n  background-color: #9ca3af;\r\n  cursor: not-allowed;\r\n}\r\n\r\n@media (max-width: 768px) {\r\n  .personal-details {\r\n    padding: 15px;\r\n    margin: 10px;\r\n  }\r\n\r\n  .personal-details label {\r\n    font-size: 1rem;\r\n  }\r\n\r\n  .personal-details input {\r\n    padding: 10px;\r\n  }\r\n\r\n  .personal-details button {\r\n    width: 100%;\r\n    padding: 12px 0;\r\n  }\r\n\r\n  .picture-preview img {\r\n    max-width: 150px;\r\n    max-height: 150px;\r\n  }\r\n\r\n  button {\r\n    width: 100%;\r\n    padding: 12px 0;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AA0CA,OAAOA,KAAI,MAAO,OAAO;AACzB,eAAe;EACbC,IAAI,EAAE,iBAAiB;EACvBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE;QACJF,IAAI,EAAE,EAAE;QACRG,KA